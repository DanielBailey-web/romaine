{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node"
  },
  "files": ["src/index.ts"]
}
