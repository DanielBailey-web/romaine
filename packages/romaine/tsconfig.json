{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./types/*"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node",
    "types": ["react"]
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  },
  "files": ["src/index.tsx"]
}
